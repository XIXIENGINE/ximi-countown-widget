    <script>
        // ▼ 시시를 처음 만난 날짜를 이곳에 적어주세요! (년-월-일)
        const startDate = new Date("2025-07-11"); 
        const today = new Date();
        const diffInMs = today - startDate;
        const diffInDays = Math.floor(diffInMs / (1000 * 60 * 60 * 24)) + 1;
        document.getElementById('anniversary').innerText = diffInDays + "일";
